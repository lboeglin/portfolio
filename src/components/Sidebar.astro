---
const base = import.meta.env.BASE_URL;
type Lang = 'fr' | 'en';

interface SidebarProps {
  name?: string;
  status?: string;
  specialization?: string;
  lang?: Lang;
}

const {
  name = 'Lohan BoÃ«glin',
  status = 'BUT 3 Informatique',
  specialization = '',
  lang = 'fr',
} = Astro.props as SidebarProps;

const labels = {
  fr: {
    home: 'Accueil',
    projects: 'Projets',
    cv: 'CV',
    contact: 'Contact',
  },
  en: {
    home: 'Home',
    projects: 'Projects',
    cv: 'CV',
    contact: 'Contact',
  },
} satisfies Record<
  Lang,
  {
    home: string;
    projects: string;
    cv: string;
    contact: string;
  }
>;

const t = labels[lang];
---

<aside class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>

  <nav class="menu p-6 w-80 min-h-full bg-base-200 text-base-content flex flex-col">
    <div class="mb-8 pl-2">
      <div class="font-bold text-2xl leading-tight">{name}</div>
      <div class="text-sm opacity-70">{status}</div>
      {specialization && <div class="text-xs opacity-60 mt-1">{specialization}</div>}
    </div>

    <ul class="flex flex-col gap-4">
      <li>
        <a href={lang === 'fr' ? '/portfolio' : '/portfolio/en/'} class="text-lg font-bold"
          >{t.home}</a
        >
      </li>

      <li>
        <a href="#projects" class="text-lg font-bold">
          {t.projects}
        </a>
      </li>

      <li>
        <a
          href={`${base}/Lohan_Boeglin_CV.pdf`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg font-bold flex items-center gap-2"
        >
          {t.cv}

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="opacity-70"
          >
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </a>
      </li>

      <li>
        <a href="#contact" class="text-lg font-bold">
          {t.contact}
        </a>
      </li>
    </ul>

    <div class="flex-1"></div>

    <div class="flex justify-center gap-2 pt-6 border-t border-base-300 mt-4">
      <a
        href="https://github.com/lboeglin"
        target="_blank"
        rel="noopener"
        aria-label="GitHub"
        class="btn btn-ghost btn-circle"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
