---
import MainLayout from '@layouts/MainLayout.astro';
import Hero from '@components/Hero.astro';
import ExperienceTimeline from '@components/ExperienceTimeline.astro';
import { getCollection } from 'astro:content';

const lang = 'en';

// 1. Fetch all projects inside the 'fr' folder
const allProjects = await getCollection('projects', ({ id }) => {
  return id.startsWith(`${lang}/`);
});

const experiences = await getCollection('experiences', ({ id }) => id.startsWith(`${lang}/`));

const sortedExperiences = experiences.sort(
  (a, b) => new Date(b.data.startDate).getTime() - new Date(a.data.startDate).getTime()
);

// 2. Sort by Date
const sortedProjects = allProjects.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// 3. Group by Category
const academic = sortedProjects.filter((p) => p.data.category === 'academic');
const personal = sortedProjects.filter((p) => p.data.category === 'personal');
---

<MainLayout lang={lang}>
  <Hero lang={lang} />

  <div class="flex flex-col gap-16">
    <ExperienceTimeline experiences={experiences} lang={lang} />

    <section id="academic">
      <h2 class="text-3xl font-bold mb-8 border-b border-base-300 pb-2 flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
          ></path></svg
        >
        Projets Acad√©miques
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          academic.map((project) => (
            <article class="card bg-base-100 shadow-xl border border-base-300 hover:border-primary transition-all duration-300">
              <div class="card-body">
                <div class="flex justify-between items-start">
                  <h3 class="card-title text-xl font-bold">{project.data.title}</h3>
                  {project.data.github && (
                    <a
                      href={project.data.github}
                      target="_blank"
                      class="btn btn-circle btn-ghost btn-sm"
                      title="Voir le code"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  )}
                </div>

                <p class="text-base-content/80 mt-2">{project.data.description}</p>

                <div class="flex flex-wrap gap-2 mt-4">
                  {project.data.tags.map((tag) => (
                    <span class="badge badge-outline badge-sm">{tag}</span>
                  ))}
                </div>

                <div class="divider my-2" />

                <div class="prose prose-sm max-w-none">
                  <p class="text-sm italic opacity-70">{project.body.substring(0, 100)}...</p>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </div>
</MainLayout>
