---
import { getCollection, getEntry } from 'astro:content';
import Layout from '@layouts/MainLayout.astro';
import { useTranslations } from '@i18n/utils';
import { type Lang, defaultLang } from '@i18n/ui';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((entry) => ({
    params: { slug: entry.slug.replace(/^[a-z]{2}\//, '') },
  }));
}

const { slug } = Astro.params;
const currentLang = (Astro.currentLocale || defaultLang) as Lang;
const t = useTranslations(currentLang);

const entry = await getEntry('projects', `${currentLang}/${slug}`);

if (!entry) {
  return Astro.redirect('/404');
}

const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - Lohan BoÃ«glin`}>
  <article class="max-w-4xl mx-auto animate-in fade-in duration-700">
    {/* 1. Header Section */}
    <div class="mb-8">
      <a
        href={`/Portfolio/${currentLang}/projects`}
        class="hover-expand mb-4 flex items-center gap-2 w-fit px-3 -ml-3 opacity-70 hover:opacity-100 transition-opacity text-lg"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"><path d="m15 18-6-6 6-6"></path></svg
        >
        {t('nav.projects')}
      </a>

      <div class="flex flex-wrap items-center gap-4 mb-4">
        <h1 class="text-4xl md:text-5xl font-extrabold">{entry.data.title}</h1>
        <span class="badge badge-primary badge-lg"
          >{t(`projects.filter.${entry.data.category}` as any)}</span
        >
      </div>

      <p class="text-xl opacity-70 max-w-2xl">{entry.data.description}</p>
    </div>

    {/* 2. Image Section */}
    {
      entry.data.image && (
        <div class="rounded-2xl overflow-hidden border border-base-300 bg-base-200 mb-8 shadow-lg">
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            width={1280}
            height={720}
            loading="eager"
            class="w-full object-cover max-h-125 rounded-2xl"
            transition:name={`image-${entry.slug}`}
          />
        </div>
      )
    }

    {/* 3. Metadata Row (Links + Stack) */}
    <div class="flex flex-col md:flex-row gap-8 mb-12 border-b border-base-300 pb-8">
      {/* Left: Links */}
      <div class="flex-1">
        <h3 class="font-bold text-sm uppercase opacity-50 mb-3">{t('projects.links')}</h3>
        <div class="flex flex-wrap gap-4">
          {
            entry.data.github && (
              <a href={entry.data.github} target="_blank" class="btn btn-outline gap-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                  <path d="M9 18c-4.51 2-5-2-7-2" />
                </svg>
                {t('projects.github')}
              </a>
            )
          }
          {
            entry.data.demo && (
              <a href={entry.data.demo} target="_blank" class="btn btn-primary gap-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </svg>
                {t('projects.demo')}
              </a>
            )
          }
        </div>
      </div>

      {/* Right: Stack */}
      <div class="flex-1">
        <h3 class="font-bold text-sm uppercase opacity-50 mb-3">{t('projects.stack')}</h3>
        <div class="flex flex-wrap gap-2">
          {entry.data.tags.map((tag) => <span class="badge badge-lg badge-outline">{tag}</span>)}
        </div>
      </div>
    </div>

    {/* 4. Main Content (Below Everything) */}
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Layout>
