---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import Sidebar from '@components/Sidebar.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { lang = 'fr' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Portfolio - Lohan BoÃ«glin</title>
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <ClientRouter />
    <script is:inline>
      const theme =
        localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'coffee' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    </script>
  </head>

  <body class="bg-base-100 text-base-content">
    <div class="drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <Sidebar transition:persist="true" />
      <div class="drawer-content flex flex-col">
        <Navbar transition:persist="true" />
        <main class="p-8 md:p-12 max-w-5xl mx-auto w-full">
          <slot />
        </main>
        <Footer transition:persist="true" />
      </div>
    </div>
  </body>
</html>
