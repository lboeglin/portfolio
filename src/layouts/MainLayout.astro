---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import Sidebar from '@components/Sidebar.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { lang = 'fr' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script is:inline>
      function getTheme() {
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme) {
          return storedTheme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches
          ? 'coffee'
          : 'caramellatte';
      }

      const theme = getTheme();
      document.documentElement.setAttribute('data-theme', theme);

      // CHANGE: Use 'astro:before-swap' instead of 'astro:after-swap'
      document.addEventListener('astro:before-swap', (ev) => {
        // Copy the theme from the current page to the new page BEFORE the swap happens
        const currentTheme = document.documentElement.getAttribute('data-theme');
        ev.newDocument.documentElement.setAttribute('data-theme', currentTheme || getTheme());
      });
    </script>
    <title>Portfolio - Lohan BoÃ«glin</title>
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <ClientRouter />
  </head>

  <body class="bg-base-100 text-base-content">
    <div class="drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <Sidebar transition:persist="true" />
      <div class="drawer-content flex flex-col">
        <Navbar transition:persist="true" />
        <main class="p-8 md:p-12 max-w-5xl mx-auto w-full">
          <slot />
        </main>
        <Footer transition:persist="true" />
      </div>
    </div>
  </body>
</html>
